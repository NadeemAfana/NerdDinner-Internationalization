@model PagedList.PagedList<NerdDinner.Models.Dinner>

@{
	ViewBag.Title = Resources.UpcomingNerdDinners;
}

<div class='hslice' id='1' >
	<h2 class='entry-title'>@Resources.UpcomingDinners</h2>
	<a rel='feedurl' href='/Dinners/WebSliceUpcoming' style='display:none;' ></a>
	<ul class="upcomingdinners">
	
		@foreach (var dinner in Model) {        
			<li>     
				@Html.ActionLink(dinner.Title, "Details", new { id=dinner.DinnerID }) 
				@Resources.on 
				<strong>@dinner.EventDate.ToString("yyyy-MMM-dd")
				@dinner.EventDate.ToString("HH:mm tt")</strong>
				@Resources.atAddress 
				@(dinner.Address + " " + dinner.Country)
			</li>
		}
	</ul>
</div>

@Html.Partial("DinnerPagination")
